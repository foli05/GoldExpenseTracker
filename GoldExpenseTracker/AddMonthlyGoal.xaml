<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldExpenseTracker.AddMonthlyGoal">
    <ContentPage.Content>
        <StackLayout>

            <Editor x:Name="editorGoal"
                   Placeholder="Enter Monthly Goal"
                   HeightRequest="200"/>
            
            
                <Grid ColumnDefinitions="*,*">

                <Button Text="Save"
                        Clicked="GoalSaveClicked"/>


                <!--<Button Grid.Column="1"
                        Text="Delete"
                        Clicked="GoalDeleteClicked"/>-->


            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>